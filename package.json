{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "copy-config": "node ./lib/copy-config",
    "lint": "lerna exec --bail=false --ignore tslint-config-origami --ignore @origami/cli-old -- tslint -t stylish --project ./",
    "lint:fix": "yarn lint --fix",
    "build": "lerna run build",
    "watch": "lerna run build -- -w",
    "test": "LOG_LEVEL=none jest --notify",
    "test:watch": "yarn test --watch",
    "cover": "yarn test --coverage --silent",
    "visualize-deps": "madge --image graph.svg --exclude '(__tests__|.d.ts)' --extensions ts packages/; open graph.svg"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.1.2",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.3",
    "@types/node-sass": "^3.10.32",
    "commitlint": "^7.2.1",
    "ejs": "^2.6.1",
    "get-port": "^4.0.0",
    "handlebars": "^4.0.12",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lerna": "^3.4.3",
    "madge": "^3.3.0",
    "node-sass": "^4.10.0",
    "origami-plugin-auth": "^1.0.2",
    "pug": "^2.0.3",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
